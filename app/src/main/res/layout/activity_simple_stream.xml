<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qiscus.streaming.sample.BasicStreamActivity">

    <EditText
        android:id="@+id/txt_rtmp_url"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:fontFamily="sans-serif"
        android:hint="rtmp://xxx.xxx.xxx.xxx:1936/live/stream"
        android:inputType="textUri"
        android:text="rtmp://xxx.xxx.xxx.xxx:1936/live/stream"
        android:textSize="18sp" />

    <Button
        android:id="@+id/b_start_stop"
        style="@android:style/Widget.Button"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:text="Start Stream" />

    <Button
        android:id="@+id/b_create_stream"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158dp"
        android:enabled="false"
        android:text="Generate Stream URL"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/publish_url_text"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:text="Publish Stream URL:"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
